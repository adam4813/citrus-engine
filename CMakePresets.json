{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "description": "Default configuration using vcpkg toolchain",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "native",
      "displayName": "Native",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "native-static",
      "displayName": "Native Static",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      }
    },
    {
      "name": "native-test",
      "displayName": "Native Test",
      "inherits": "native",
      "cacheVariables": {
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "native-static-test",
      "displayName": "Native Static ",
      "inherits": "native-static",
      "cacheVariables": {
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "wasm",
      "displayName": "WASM",
      "description": "Emscripten WASM build (browser)",
      "inherits": "base",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten",
        "EMSCRIPTEN_ROOT_PATH": "$env{EMSDK}/upstream/emscripten"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "native-debug",
      "displayName": "Native Debug",
      "configurePreset": "native",
      "configuration": "Debug"
    },
    {
      "name": "native-release",
      "displayName": "Native Release",
      "configurePreset": "native",
      "configuration": "Release"
    },
    {
      "name": "native-static-debug",
      "displayName": "Native Static Debug",
      "configurePreset": "native-static",
      "configuration": "Debug"
    },
    {
      "name": "native-static-release",
      "displayName": "Native Static Release",
      "configurePreset": "native-static",
      "configuration": "Release"
    },
    {
      "name": "wasm-debug",
      "displayName": "WASM Debug",
      "configurePreset": "wasm",
      "configuration": "Debug"
    },
    {
      "name": "wasm-release",
      "displayName": "WASM Release",
      "configurePreset": "wasm",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "native-test",
      "displayName": "Native Tests",
      "configurePreset": "native-test",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "native-static-test",
      "displayName": "Native Static Tests",
      "configurePreset": "native-static-test",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "native-test-release",
      "displayName": "Native Tests (Release)",
      "configurePreset": "native-test",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
